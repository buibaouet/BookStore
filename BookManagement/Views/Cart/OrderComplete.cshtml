    ViewData["Title"] = "Hoàn thành";
}

@section css {
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
}

@section scripts {
}

<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link" href="/cart">Giỏ hàng</a>
                <a class="nav-item nav-link" href="/cart/waiting">Chờ lấy hàng</a>
                <a class="nav-item nav-link" href="/cart/delivering">Đang giao hàng</a>
                <a class="nav-item nav-link active" href="#">Hoàn thành</a>
                <a class="nav-item nav-link" href="/cart/ordercancel">Đã hủy</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pane-4">
                    <div class="d-flex justify-content-between mb-2">
                        <h5 class="font-weight-bole">Tổng số: 12 đơn hàng</h5>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-3">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="card border-secondary mb-5">
                        <div class="card-header bg-secondary border-0">
                            <h6 class="font-weight-semi-bold m-0">20/02/2024</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3 pt-1">
                                <div class="d-flex">
                                    <div class="flex-shrink-0 me-3">
                                        <div class="align-middle">
                                            <img src="~/img/banner-1.jpg" class="img-book-td mx-1" />
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="font-weight-medium d-block">Sách Các nền văn minh thế giới</h6>
                                        <small class="text-muted">x2</small>
                                    </div>
                                </div>
                                <h6 class="font-weight-medium">210.000 đ</h6>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="d-flex">
                                    <div class="flex-shrink-0 me-3">
                                        <div class="align-middle">
                                            <img src="~/img/ii.png" class="img-book-td mx-1" />
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="font-weight-medium d-block">Sách Chúa tể những chiếc nhẫn</h6>
                                        <small class="text-muted">x1</small>
                                    </div>
                                </div>
                                <h6 class="font-weight-medium">100.000 đ</h6>
                            </div>
                        </div>
                        <div class="card-footer border-secondary bg-transparent">
                            <div class="d-flex justify-content-between mb-2">
                                <h6 class="font-weight-medium">Phí vận chuyển:</h6>
                                <h6 class="font-weight-medium">$10</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <h6 class="font-weight-medium">Khuyến mại:</h6>
                                <h6 class="font-weight-medium text-muted"><del>$10</del></h6>
                            </div>
                            <div class="d-flex justify-content-between mt-2">
                                <h5 class="font-weight-bold">Tổng tiền:</h5>
                                <h5 class="font-weight-bold">$160</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->